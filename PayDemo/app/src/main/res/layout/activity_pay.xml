<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="activity"
            type="com.exam.pay.payInfo.PayActivity" />

        <variable
            name="model"
            type="com.exam.pay.payInfo.vm.PayViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/main_color"
            >
            <TextView
                android:id="@+id/tv_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17"
                android:text="購買商品"
                />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:id="@+id/rl_pay_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginLeft="@dimen/dp_25">
                    <TextView
                        android:id="@+id/tv_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"
                        android:text="請選擇支付方式"
                        />
                    <TextView
                        android:id="@+id/tv_pay_type_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_below="@+id/tv_pay_type"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/pay_text_bg"
                        android:text="微信"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/dp_14"
                        android:drawableRight="@mipmap/pull_down"
                        android:paddingRight="@dimen/dp_15"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pay_interface_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginLeft="@dimen/dp_25">
                    <TextView
                        android:id="@+id/tv_pay_interface_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"
                        android:text="接口類型"
                        />
                    <EditText
                        android:id="@+id/et_pay_type_interface"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_below="@+id/tv_pay_interface_type"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/pay_text_bg"
                        android:hint="請輸入"
                        android:textColorHint="@color/input_hint_text"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_15"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pay_client_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginLeft="@dimen/dp_25">
                    <TextView
                        android:id="@+id/tv_pay_client_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"
                        android:text="商戶號"
                        />
                    <EditText
                        android:id="@+id/et_pay_client_num"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_below="@+id/tv_pay_client_num"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/pay_text_bg"
                        android:hint="請輸入"
                        android:textColorHint="@color/input_hint_text"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_15"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pay_client_return_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginLeft="@dimen/dp_25">
                    <TextView
                        android:id="@+id/tv_pay_client_return_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"
                        android:text="商戶退款訂單號"
                        />
                    <EditText
                        android:id="@+id/et_pay_client_return_num"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_below="@+id/tv_pay_client_return_num"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/pay_text_bg"
                        android:hint="請輸入"
                        android:textColorHint="@color/input_hint_text"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_15"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pay_client_order_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_25">
                    <TextView
                        android:id="@+id/tv_pay_client_order_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"
                        android:text="商戶訂單號"
                        />
                    <EditText
                        android:id="@+id/et_pay_client_order_num"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_below="@+id/tv_pay_client_order_num"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/pay_text_bg"
                        android:hint="請輸入"
                        android:textColorHint="@color/input_hint_text"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_15"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pay_goods_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_25">
                    <TextView
                        android:id="@+id/tv_pay_goods_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"
                        android:text="商品描述"
                        />
                    <EditText
                        android:id="@+id/et_pay_goods_desc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_below="@+id/tv_pay_goods_desc"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/pay_text_bg"
                        android:hint="請輸入"
                        android:textColorHint="@color/input_hint_text"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_15"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pay_total_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginLeft="@dimen/dp_25">
                    <TextView
                        android:id="@+id/tv_pay_total_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"
                        android:text="總金額"
                        />
                    <EditText
                        android:id="@+id/et_pay_total_money"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_below="@+id/tv_pay_total_money"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/pay_text_bg"
                        android:hint="請輸入"
                        android:textColorHint="@color/input_hint_text"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_15"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pay_return_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginLeft="@dimen/dp_25">
                    <TextView
                        android:id="@+id/tv_pay_return_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"
                        android:text="退款金額"
                        />
                    <EditText
                        android:id="@+id/et_pay_return_money"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_below="@+id/tv_pay_return_money"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/pay_text_bg"
                        android:hint="請輸入"
                        android:textColorHint="@color/input_hint_text"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_15"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pay_option_per"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginLeft="@dimen/dp_25">
                    <TextView
                        android:id="@+id/tv_pay_option_per"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"
                        android:text="操作員"
                        />
                    <EditText
                        android:id="@+id/et_pay_option_per"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_below="@+id/tv_pay_option_per"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/pay_text_bg"
                        android:hint="請輸入"
                        android:textColorHint="@color/input_hint_text"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_15"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pay_round_numstr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginLeft="@dimen/dp_25">
                    <TextView
                        android:id="@+id/tv_pay_round_numstr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"
                        android:text="隨機字串"
                        />
                    <EditText
                        android:id="@+id/et_pay_round_numstr"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_below="@+id/tv_pay_round_numstr"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/pay_text_bg"
                        android:hint="請輸入"
                        android:textColorHint="@color/input_hint_text"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_15"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pay_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginLeft="@dimen/dp_25">
                    <TextView
                        android:id="@+id/tv_pay_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"
                        android:text="簽名"
                        />
                    <EditText
                        android:id="@+id/et_pay_sign"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_below="@+id/tv_pay_sign"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/pay_text_bg"
                        android:hint="請輸入"
                        android:textColorHint="@color/input_hint_text"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_15"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pay_teminal_ip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_25">
                    <TextView
                        android:id="@+id/tv_pay_teminal_ip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"
                        android:text="終端IP"
                        />
                    <EditText
                        android:id="@+id/et_pay_teminal_ip"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_below="@+id/tv_pay_teminal_ip"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/pay_text_bg"
                        android:hint="請輸入"
                        android:textColorHint="@color/input_hint_text"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_15"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pay_notify_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginLeft="@dimen/dp_25">
                    <TextView
                        android:id="@+id/tv_pay_notify_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"
                        android:text="通知地址"
                        />
                    <EditText
                        android:id="@+id/et_pay_notify_address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_below="@+id/tv_pay_notify_address"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/pay_text_bg"
                        android:hint="請輸入"
                        android:textColorHint="@color/input_hint_text"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_15"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:textColor="@color/white"
                    android:background="@color/main_color"
                    android:textSize="@dimen/text_size_16"
                    android:text="去支付"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_70"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp_67"
                    />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>